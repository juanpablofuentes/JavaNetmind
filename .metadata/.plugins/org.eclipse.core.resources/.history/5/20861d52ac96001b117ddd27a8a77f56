		int respuesta;
		do {
			respuesta = menu("¿Qué quieres hacer?\r\n"
					+ "1- Atacar\r\n"
					+ "2.- Retirada\r\n"
					+ "0.- Salir");
			
			if (respuesta==1) {
				
			} else if (respuesta==2) {
				do {
					respuesta = menu("Has decido atacar\r\n"
							+ "1- Con todas las unidades\r\n"
							+ "2.- con una unidad\r\n"
							+ "0.- Salir");
					if (respuesta==1) {
						// Atacar
					} else if (respuesta==2) {
						//Retirarse
					}
				} while (respuesta!=0);
			}
		} while (respuesta!=0);
