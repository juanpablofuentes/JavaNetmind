package com.trifulcas.ejemplos;

public class CadenaBuffer {

	public static void main(String[] args) {
		StringBuffer sb=new StringBuffer("Hola ");  
		sb.append("que tal");  
		System.out.println(sb);
		sb.insert(1,"Java");  
		System.out.println(sb);
		sb.replace(4,6,"Java");  
		System.out.println(sb);
	}

}
